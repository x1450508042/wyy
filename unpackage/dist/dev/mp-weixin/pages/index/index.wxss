.tjmusic {
  width: 700rpx;
  margin: 0 auto;
}
.tjmusic .tjTop {
  font-size: 35rpx;
  font-weight: 700;
  margin: 20rpx 0;
}
.tjmusic .container {
  height: 360rpx;
  width: 100%;
}
.tjmusic .container swiper-item {
  width: 36% !important;
  padding-right: 10px !important;
}
.tjmusic .container .swiper {
  height: 100%;
}
.tjmusic .container .swiper image {
  width: 100%;
  height: 250rpx;
  border-radius: 9px;
}
.tjmusic .container .swiper .txt {
  height: 42px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

